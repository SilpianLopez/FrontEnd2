<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >
        <!--프로필 사진-->
        <ImageView
            android:id="@+id/im_prfimg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_profile_img" />
        <!--사용자 이름-->
        <TextView
            android:id="@+id/text_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="사용자"
            android:textSize="30dp"
            android:textStyle="bold" />
        <!--편집 버튼-->
        <ImageView
            android:id="@+id/im_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile_edit" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp" >
        <!--가족 구성원-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가족 구성원"
            android:textSize="25dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp" />
        <!--가로선 -->
        <View
            android:id="@+id/middleDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF888888"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/text_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp" />
        <!--반려동물-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="반려동물"
            android:textSize="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp" />
        <!--가로선 -->
        <View
            android:id="@+id/middleDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF888888"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/text_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp" />
        <!--청소 통계 보기 버튼-->
        <Button
            android:id="@+id/btn_stats"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="청소 통계 보기"
            android:textSize="25dp"
            android:textColor="#673AB7"
            android:layout_marginTop="100dp"
            android:layout_gravity="center|bottom"
            android:textStyle="bold"
            android:background="@drawable/btn_outline_black" />
    </LinearLayout>
    <!-- 하단 네비게이션 -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#EEEEEE"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/im_profile"
                android:src="@drawable/ic_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:text="프로필"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/im_home"
                android:src="@drawable/ic_home"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:text="홈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/navCalendar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/im_calendar"
                android:src="@drawable/ic_calendar"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView android:text="캘린더"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/navAi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/im_ai"
                android:src="@drawable/ic_ai"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:text="AI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>